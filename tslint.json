{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended",
    "tslint-plugin-prettier",
    "tslint-config-prettier"
  ],
  "rules": {
    "prettier": [true],
    "no-console": true,
    "no-var-keyword": true,
    "no-var-requires": false,
    "jsdoc-format": [false],
    "one-variable-per-declaration": [false],
    "object-literal-sort-keys": [false],
    "no-unused-expression": [false],
    "no-shadowed-variable": [
      true,
      {
        "class": true,
        "enum": true,
        "function": true,
        "interface": false,
        "namespace": true,
        "typeAlias": false,
        "typeParameter": false,
        "temporalDeadZone": false
      }
    ]
  },
  "linterOptions": {
    "exclude": [
      "src/lib/db/migration/*.ts",
      "src/config/environments/*.ts",
      "dist/**"
    ]
  },
  "rulesDirectory": []
}
